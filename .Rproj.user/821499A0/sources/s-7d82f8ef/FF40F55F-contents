library(readstata13)
library(dplyr)

DATABASES <- file.path('/', 'home', 'databases')

cargar_ncm <- function() {
  path <- file.path(DATABASES, 
            'ine', 'EAAE', '2012', 'sen')
  
  tabla_ncm_insumos <- file.path(path, 'insumo', 'insumos.dta') %>% 
    read.dta13 %>% 
    group_by(codigoinsumo) %>% 
    summarize(descripcion = first(descripcioninsumo)) %>% 
    rename(codigo = codigoinsumo)
  
  # cargar tabla ncm
  tabla_ncm_productos <- file.path(path, 'producto', 'productos.dta') %>% 
    read.dta13() %>% 
    group_by(codigoproducto) %>% 
    summarize(descripcion = first(descripcionproducto)) %>% 
    rename(codigo = codigoproducto) 
  
  
  bind_rows(tabla_ncm_insumos, tabla_ncm_productos)
  
}
