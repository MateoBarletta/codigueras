# Librerías
library(readxl)
library(dplyr)

# Rutas
DATABASES <- file.path('/', 'home', 'databases')
path <- file.path('~', '..', 'vburguete', 'repositorio_info_2')


# import codiguera clasificación Uruguay XXI
clasif.uyxxi <- function() {
  file.path(DATABASES, 'codigueras', 'clasif_productos_uyxxi', 'Clasificación Uruguay XXI.xlsx') %>% 
    read_xlsx %>%
    rename(ncm_4 = NCM4, 
           ncm_6 = NCM6,
           desc.uyxxi = `Clasificación Uruxxi`) %>% 
    filter(is.na(desc.uyxxi) != TRUE)
}

  